<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/feedBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textIsSelectable="true"
        tools:text="Released from physical education" />

    <TextView
        android:id="@+id/lessonDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/feedBody"
        android:layout_alignParentStart="true"
        android:textIsSelectable="true"
        tools:text="Oct 20, Thursday" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/attachments_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lessonDate" />
</RelativeLayout>
